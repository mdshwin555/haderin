# /.htaccess (في جذر المشروع)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # لو الملف/المجلد موجود فعلاً، اعرضه كما هو
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # لو الطلب مش داخل /public، ودّيه على /public
  RewriteCond %{REQUEST_URI} !^/public/
  RewriteRule ^(.*)$ public/$1 [L,QSA]
</IfModule>
